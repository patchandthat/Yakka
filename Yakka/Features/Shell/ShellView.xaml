                        </Viewbox>
                        <TextBlock Margin="8 0 0 0" VerticalAlignment="Center">GitHub</TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Margin="16">&lt;Page title&gt;</TextBlock>
                
            </DockPanel>
        </wpf:ColorZone>
        
        <controls:TransitioningContentControl x:Name="ActiveContent" Margin="8"></controls:TransitioningContentControl>
    </DockPanel>

